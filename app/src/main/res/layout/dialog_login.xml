<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_blue">

    <TextView
        android:id="@+id/text_login_dialog"
        style="@style/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="@string/email_or_phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/userName_dialog"

        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/shape_edit_text"
        android:gravity="center"
        android:text="samg05981@gmail.com"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_login_dialog" />


    <TextView
        android:id="@+id/text_password_dialog"
        style="@style/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:text="@string/passport"
        app:layout_constraintStart_toStartOf="@id/text_login_dialog"
        app:layout_constraintTop_toBottomOf="@+id/userName_dialog"


        />

    <TextView
        android:id="@+id/userPassword_dialog"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/shape_edit_text"
        android:gravity="center"
        android:text="asdfghjkl"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/text_password_dialog"
        app:layout_constraintTop_toBottomOf="@+id/text_password_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>