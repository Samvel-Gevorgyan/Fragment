<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view_background_light_grey"
        android:layout_width="0dp"
        android:layout_height="@dimen/_170dp"
        android:background="@drawable/shape_background_light_grey"
        app:layout_constraintBottom_toTopOf="@+id/button_log_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_background_grey"
        android:layout_width="0dp"
        android:layout_height="@dimen/_400dp"
        android:background="@drawable/shape_background_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_background_light_grey" />

    <View
        android:id="@+id/view_background_dark_blue"
        android:layout_width="0dp"
        android:layout_height="@dimen/_300dp"
        android:background="@drawable/shape_background_dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_log_in" />

    <TextView
        android:id="@+id/getUserName"
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_30dp"
        android:background="@color/cardview_shadow_end_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/getPassword"
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_30dp"
        app:layout_constraintTop_toTopOf="@+id/getUserName"
        app:layout_constraintStart_toStartOf="@+id/getUserName"
        android:layout_marginTop="20dp"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_log_in"
        style="@style/style_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_sign_up"
        style="@style/style_button_transfer."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/date_me"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textColor="#3F51B5"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_log_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/description"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/date_me"
        app:layout_constraintStart_toStartOf="@+id/date_me"
        app:layout_constraintTop_toBottomOf="@+id/date_me" />

</androidx.constraintlayout.widget.ConstraintLayout>