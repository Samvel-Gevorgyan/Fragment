<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Global style-->
    <style name="style_button">
        <item name="android:background">@drawable/shape_button_rounded_light_blue</item>
        <item name="android:width">@dimen/_120dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_button_transfer">
        <item name="android:background">@drawable/shape_button_rounded_transparent</item>
        <item name="android:width">@dimen/_120dp</item>
        <item name="android:textColor">@color/color_buttonText_light_blue</item>
    </style>

    <style name="style_edit_text">
        <item name="android:width">@dimen/_300dp</item>
        <item name="android:height">@dimen/_30dp</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="android:hint">Type here...</item>
        <item name="android:background">@drawable/shape_edit_text</item>
    </style>

    <style name="text_view">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <!--fragment Welcome-->
    <style name="style_button_login" parent="style_button">
        <item name="android:text">@string/log_in</item>
    </style>

    <style name="style_button_transfer." parent="style_button_transfer">
        <item name="android:text">@string/sign_up</item>
    </style>


    <!--fragment LogIn-->
    <style name="style_button_login." parent="style_button_login"/>

    <style name="style_button_signUp" parent="style_button">
        <item name="android:text">@string/sign_up</item>
    </style>

    <!-- -->



</resources>